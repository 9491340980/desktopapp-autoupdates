{
  "name": "RMX-App",
  "version": "15.0.28",
  "main": "main.js",
  "productName": "RMX Desktop",
  "description": "RMX Desktop Application",
  "author": "Your Name",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "electron": "set ELECTRON_START_URL=http://localhost:4200 && electron .",
    "electron-build": "ng build --configuration production && electron .",
    "package-win": "ng build --configuration production && electron-builder build --win --x64",
    "publish-update": "ng build --configuration production && electron-builder build --win --x64 --publish always"
  },
  "build": {
    "appId": "com.company.rmxdesktop",
    "productName": "RMX Desktop",
    "publish": [
      {
        "provider": "github",
        "owner": "9491340980",
        "repo": "rmx-desktop-releases"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "package.json",
      "build/icon.ico",
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "~20.2.12",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "~20.2.12",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "crypto-js": "^4.2.0",
    "electron-updater": "^6.3.9",
    "material-design-icons-iconfont": "^6.7.0",
    "material-icons": "^1.13.14",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.2",
    "@angular/cli": "^20.0.2",
    "@angular/compiler-cli": "^20.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.10.0",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2"
  }
}
